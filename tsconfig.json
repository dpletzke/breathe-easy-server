{
  "compilerOptions": {
    "types": [
      "node",
    ],
    "lib": [
      "es2023",
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}